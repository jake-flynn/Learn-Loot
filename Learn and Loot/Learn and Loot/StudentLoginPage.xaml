<Page x:Class="Learn_and_Loot.StudentLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="520" d:DesignWidth="1002"
	Title="StudentLoginPage">

    <Grid>
        <TextBox x:Name="tbx_userName"  HorizontalAlignment="Left" Height="25" Margin="300,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" IsEnabled="True" FontSize="14" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="pwd_password" Margin="0,200,300,0" VerticalAlignment="Top" Height="25" HorizontalAlignment="Right" Width="125"/>
        <Button x:Name="btn_StudentLogin" Content="Login" Margin="413,0,414,120" Height="100" VerticalAlignment="Bottom" Click="btn_StudentLogin_Click"/>
        <Label Content="User Name:" HorizontalAlignment="Left" Margin="302,175,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" Margin="0,175,351,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="71"/>
        <Label Content="Student Login" Margin="458,60,457,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
